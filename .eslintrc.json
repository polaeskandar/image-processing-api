{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "standard-with-typescript",
  "overrides": [],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": ["./tsconfig.json"]
  },
  "rules": {
    "@typescript-eslint/no-var-requires": 0,
    "semi": "off",
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/no-misused-promises": "off"
  }
}
